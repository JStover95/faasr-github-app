{
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "editor.rulers": [
    80,
    120
  ],
  "editor.tabSize": 2,
  "cSpell.words": [
    "faasr",
    "supabase",
    "vite"
  ],

  "jest.jestCommandLine": "npm test --",
  "jest.runMode": "on-demand",
}
